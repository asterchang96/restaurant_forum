<h1>TOP10 人氣餐廳</h1>
<hr />
<div class="container col-md-10">
  {{#each restaurants}}
  <div class="card card-body mb-2">
    <div class="row">
      <div class="col-md-5">
        <a href="/restaurants/{{this.id}}">
          <img src="{{this.image}}">
        </a>
      </div>
      <div class="col-md-7">
        <h2>{{this.name}}</h2>
        <span class="badge badge-secondary mt-3 mb-2">收藏數：{{this.voteCount}}</span>
        <p>{{this.description}}</p>
        <div class="row btn-group">
          <a href='/restaurants/{{this.id}}'>
            <button type="button" class="btn btn-primary mx-2">Show</button>
          </a>
          {{#if this.isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
              type="submit" class="btn btn-danger mx-2">移除最愛</button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
              class="btn btn-primary mx-2">加入最愛</button></form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>