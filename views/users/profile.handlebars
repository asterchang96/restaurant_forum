<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="p-4">
          <div class="d-flex flex-row">
            <div class=""><img src="{{user.image}}" alt="user"
                class="rounded-circle" width="200" /></div>
            <div class="pl-4">
              <h3>{{user.name}}</h3>
              <h4>{{#ifCond user.isAdmin true}}管理員{{/ifCond}}</h4>
              <h4>{{user.email}}</h4>
              <p><strong>{{comment.length}}</strong> 已評論餐廳 | <strong>{{user.FavoritedRestaurants.length}}</strong> 收藏的餐廳</p>
              <p><strong>{{user.Followers.length}}</strong> following(追蹤者) | <strong>{{user.Followings.length}}</strong> followers(追隨者)</p>
              <a class="btn btn-success btn-rounded text-white text-uppercase font-14 mt-3" href="/users/{{user.id}}/edit"><i class="fa fa-edit"></i> Edit</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br />
    <div class="row">
      <div class="col-md-5">
        <div class="card">
          <h5 class="card-header">{{user.Followers.length}} following(追蹤者)</h5>
          <div class="p-4">
            <div class="d-flex flex-row">
              {{#each user.Followers}}
              <a href="../restaurants/{{this.id}}">
              <img src="{{this.image}}" alt="user" width="80" height="80"class="mr-3"/></a>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-7">
        <div class="card">
          <h5 class="card-header">{{comment.length}} 已評論餐廳</h5>
          <div class="p-4">
            <div class="d-flex flex-row">
              {{#each userCommentResult}}
              <a href="../restaurants/{{this.id}}">
                <img src="{{this.URL}}" title="有 {{this.count}} 則評論" alt="user" width="80" height="80" class="mr-3" />
              </a>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
<br />
<div class="row">
  <div class="col-md-5">
    <div class="card">
      <h5 class="card-header">{{user.Followings.length}} followers(追隨者)</h5>
      <div class="p-4">
        <div class="d-flex flex-row">
          {{#each user.Followings}}
          <a href="../restaurants/{{this.id}}">
            <img src="{{this.image}}" alt="user" width="80" height="80" class="mr-3" /></a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="card">
      <h5 class="card-header">{{user.FavoritedRestaurants.length}} 收藏的餐廳</h5>
      <div class="p-4">
        <div class="d-flex flex-row">
          {{#each user.FavoritedRestaurants}}
          <a href="../restaurants/{{this.id}}">
            <img src="{{this.image}}" alt="user" width="80" height="80" class="mr-3" /></a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
</div>